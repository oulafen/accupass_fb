=render 'admin/admin_header'
.box-1
  .modal-header(style="background:#F5F5F5")
    %span.h4-1 用户管理&nbsp&nbsp&nbsp
    =link_to " + 添加用户", add_user_path, :class=>'btn btn-2'
  %table.table.table-striped
    %thead
      %tr.bold
        %td 编号
        %td 用户名
        %td 操作
    %tbody
      -@pages_user.each do |t|
        %tr
          %td
            =t.id
          %td
            =t.name
          %td
            =link_to "删除", del_user_path(:id => t.id), :method => :delete, :confirm=>"您确定要删除\"#{t.name}\"？"
            =link_to "修改密码", change_password_path(:name=>t.name)
  .modal-footer
    = will_paginate(@pages_user)
