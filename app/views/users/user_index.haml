=render '/users/user_header'
.box-1
  .modal-header(style="background:#F5F5F5")
    %span.h4-1 活动信息
    .right
      =button_to '同步展示',:controller=>'show', :action=>'show'
  %table.table.table-striped
    %thead
      %tr.bold
        %td 编号
        %td 活动名称
        %td 报名人数
        %td 竞价次数
    %tbody
      -@pages_activities.each do |t|
        %tr
          %td
            =t[:id]
          %td
            =link_to t[:name], bid_list_path(:activity_name => t[:name])
          %td
            =link_to t[:bm_num],sign_up_list_path(:activity_name => t[:name])
          %td
            =link_to t[:jj_num]
  .modal-footer
    = will_paginate(@pages_activities)