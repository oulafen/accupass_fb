.modal.fade.in(style="background:#F5F5F5; margin-top:5%;" )
  .nav-header
    %h4 新用户注册
  .index-login.padding
    .text-right
      =link_to  "用户登录",root_path
    =form_for :user do |f|
      .input-prepend
        = f.label :'帐号', :class=>"add-on-1"
        = f.text_field :name, :class=>"wid-350"
      .input-prepend
        = f.label :'密码', :class=>"add-on-1"
        = f.text_field :password, :type=>"password", :class=>"wid-350"
      .input-prepend
        = f.label :'请确认密码' ,:class=>"add-on-1"
        = f.text_field :password_confirmation, :type=>"password", :class=>"wid-350"
      .input-prepend
        = f.label :'忘记密码问题' ,:class=>"add-on-1"
        = f.text_field :forgot_pw_question, :class=>"wid-350"
      .input-prepend
        = f.label :'忘记密码答案' ,:class=>"add-on-1"
        = f.text_field :forgot_pw_answer, :class=>"wid-350"

      .btn-danger.active
        -if @user.errors.any?
          = @user.errors.full_messages.first
        -#=flash.now[:notice]

      %div
        = f.submit "注  册", class: "btn", style:'width:150px'
